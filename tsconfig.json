{
  "include": ["lib/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "lib": ["es6", "DOM"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}

